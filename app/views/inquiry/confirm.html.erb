<div class="page-header text-center m-5">
  <h5>お問い合わせ</h5>
</div>

<%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <table class="table w-50 mx-auto">
    <tr>
      <th>名前</th>
      <td class="text-right">
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td class="text-right">
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td class="text-right">
        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %>
      </td>
    </tr>
  </table>
  <div class="text-center mb-5"><%= f.submit '送信', :class => 'btn btn-primary' %></div>
<% end %>