<h2>マイページ</h2>
<!--ユーザ登録情報-->
<!--フォローボタン-->
<div class="container">
  <%= render "relationships/info", user: @user %>
  <%= link_to "フォロー一覧",user_followings_path(@user) %>
  <%= link_to "フォロワー一覧",user_followers_path(@user) %><br />
  <%= @user.name %><br />
  <%= @user.display_name %><br />
  <!--円形の指定はCSS-->
  <%= image_tag @user.icon_image,class:"icon-image" %><br />
  <%= image_tag @user.header_image,class:"w-50 rounded" %><br />
  <%= @user.introduction %><br />
  <%= @user.url %>
</div>


<!--自分の投稿一覧-->
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <p><% @posts.each do |post| %></p>
      <h3 class="text-center mt-5 font-weight-bold"><%= post.title %></h3>
      <!--枠線-->
      <div class="border border-secondary border-bottom-0 border-right-0 pt-3 pl-5 mb-5">
        <div class="row">
          <div class="offset-md-7 col text-right">制作時間：<%= post.making_time %>時間</div>
          <div class="col text-right"><%= post.instrument %></div>
        </div>
        <div class="mt-3 mb-3">
          <%= image_tag post.image,class:"w-100 rounded" %>
        </div>
        <div class="offset-md-10 col-2 p-2 bg-secondary text-white-50 rounded-lg text-center mb-3"><%= post.genre %></div>
        <p class="text-right"><%= post.text %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
