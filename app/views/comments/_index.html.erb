<p>コメント件数：<%= post.comments.count %></p>
<% post.comments.each do |comment| %>
  <div>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <% if comment.user.icon_image.attached? %>
      <%= image_tag comment.user.icon_image.variant(resize: "50x50"),class:"rounded-circle",style:"width: 50px; height: 50px; object-fit: cover" %>
    <% else %>
     <%= image_tag 'img/no_image.jpg', class:"rounded-circle",size: "50x50" %>
    <% end %>
    <%= comment.user.name %>
    <%= comment.text %>
    <% if comment.user == current_user %>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
    <% end %>
  </div>
<% end %>