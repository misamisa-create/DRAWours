<% chats.each do |chat| %>
  <% if chat.user_id == current_user.id %>
    <div class="text-right m-3">
      <%= chat.message %>
      <%= link_to user_path(current_user) do %>
        <% if current_user.icon_image.attached? %>
          <%= image_tag current_user.icon_image.variant(resize: "70x70"),class:"rounded-circle",style:"width: 70px; height: 70px; object-fit: cover" %>
        <% else %>
          <%= image_tag 'img/no_image.jpg', class:"rounded-circle",size: "70x70" %><br />
        <% end %>
      <% end %>
    </div>
  <% else %>
  <div class="m-3">
    <%= link_to user_path(chat.user) do %>
      <% if chat.user.icon_image.attached? %>
        <%= image_tag chat.user.icon_image.variant(resize: "70x70"),class:"rounded-circle",style:"width: 70px; height: 70px; object-fit: cover" %>
      <% else %>
        <%= image_tag 'img/no_image.jpg', class:"rounded-circle",size: "70x70" %><br />
      <% end %>
    <% end %>
    <%= chat.message %>
  </div>
  <% end %>
<% end %>