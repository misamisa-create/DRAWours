<div class="container">
  <div class="row m-5">
    <div class="col-sm-12 mx-auto">
      <div class="w-50 p-4 bg-light rounded-pill mx-auto text-center"><%= @user.name %>さんとのチャット</div>
      <div>
        <%= link_to user_path(@user) do %>
          <% if @user.icon_image.attached? %>
            <%= image_tag @user.icon_image.variant(resize: "70x70"),class:"rounded-circle",style:"width: 70px; height: 70px; object-fit: cover" %>
          <% else %>
            <%= image_tag 'img/no_image.jpg', class:"rounded-circle",size: "70x70" %><br />
          <% end %>
        <% end %>
      </div>
      <div class="text-right">
        <%= link_to user_path(current_user) do %>
          <% if current_user.icon_image.attached? %>
            <%= image_tag current_user.icon_image.variant(resize: "70x70"),class:"rounded-circle",style:"width: 70px; height: 70px; object-fit: cover" %>
          <% else %>
            <%= image_tag 'img/no_image.jpg', class:"rounded-circle",size: "70x70" %><br />
          <% end %>
        <% end %>
      </div>


      <% @chats.each do |chat| %>
        <% if chat.user_id == current_user.id %>
          <p style="text-align: right;"><%= chat.message %></p>
        <% else %>
          <p style="text-align: left;"><%= chat.message %></p>
        <% end %>
      <% end %>


      <%= form_with model: @chat, remote: true do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
      <%= f.submit "チャット"%>
      <% end %>


    </div>
  </div>
</div>



