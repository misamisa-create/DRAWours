<div class="container">
  <div class="row">
    <div class="col-sm-9 mx-auto">

      <p><% posts.each do |post| %></p>
      <!--作品タイトル-->
      <h3 class="text-center mt-5 font-weight-bold"><%= post.title %></h3>
      <!--枠線-->
      <div class="border border-secondary border-bottom-0 border-right-0 pt-3 pl-5 mb-5">
        <div class="row">
          <!--画像上情報-->
          <div class="offset-sm-7 col text-right">制作時間：<%= post.making_time %>日</div>
          <div class="col text-right"><%= post.instrument %></div>
        </div>
        <!--メイン画像-->
        <%= link_to post_path(post) do %>
          <div class="mt-3 mb-3">
            <%= image_tag post.image,class:"w-100 rounded" %>
          </div>
        <% end %>

        <!--いいね、コメント、タグ-->
        <div class="row">
          <div class="offset-sm-3 col-sm-3 text-right pt-2">
            <div id="favorites_buttons_<%= post.id %>"><%= render "favorites/favorite", post: post %></div>
          </div>
          <div class="col-sm-3 text-left pt-2">
            <%= link_to "#{post.comments.count} コメント", post_path(post) %>
          </div>
          <div class="col-sm-3 text-right">
            <%= raw(post.tag_list.map { |t| link_to t, tag_path(t), class: "btn btn-outline-secondary mr-3 mb-3", style:"width: 120px" }.join(' ')) %>
          </div>
        </div>

        <!--アイコンと本文-->
        <div class="border-top border-bottom">
          <div class="row d-flex align-items-center mt-3 mb-3" style="height:120px;">
            <div class="col-sm-3">
            <%= link_to user_path(post.user) do %>
              <!--CSSと併用すると%= image_tag post.user.icon_image,class:"icon-image"%>-->
              <% if post.user.icon_image.attached? %>
                <%= image_tag post.user.icon_image.variant(resize: "120x120"),class:"rounded-circle",style:"width: 120px; height: 120px; object-fit: cover" %>
              <% else %>
               <%= image_tag 'img/no_image.jpg', class:"rounded-circle",size: "120x120" %><br />
              <% end %>
            <% end %>
            </div>
            <div class="col-sm-8 ml-2"><%= post.text %></div>
          </div>
        </div>

        <!--削除ボタン-->
        <div class="row">
          <div class="col-sm-12">
            <% if post.user == current_user %>
              <%= link_to "投稿を削除する",post_path(post),method: :delete, class:"btn btn-outline-danger float-right mt-3" %>
            <% end %>
          </div>
        </div>


      </div>
      <% end %>
    </div>
  </div>
</div>

