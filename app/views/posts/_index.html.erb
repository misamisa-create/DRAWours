<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <p><% posts.each do |post| %></p>

      <h3 class="text-center mt-5 font-weight-bold"><%= post.title %></h3>

      <!--枠線-->
      <div class="border border-secondary border-bottom-0 border-right-0 pt-3 pl-5 mb-5">
        <div class="row">
          <div class="offset-md-7 col text-right">制作時間：<%= post.making_time %>時間</div>
          <div class="col text-right"><%= post.instrument %></div>
        </div>
        <%= link_to post_path(post) do %>
          <div class="mt-3 mb-3">
            <%= image_tag post.image,class:"w-100 rounded" %>
          </div>
        <% end %>

        <div class="offset-md-10 col-2 p-2 bg-secondary text-white-50 rounded-lg text-center mb-3"><%= post.genre %></div>
        <div><%= link_to "#{post.comments.count} コメント", post_path(post) %></div>

        <div class="row d-flex align-items-center" style="height:120px;">
          <div class="col-sm-3">
          <%= link_to user_path(post.user) do %>
            <!--CSSと併用すると%= image_tag post.user.icon_image,class:"icon-image"%>-->
            <% if post.user.icon_image.attached? %>
              <%= image_tag post.user.icon_image.variant(resize: "120x120"),class:"rounded-circle",style:"width: 120px; height: 120px; object-fit: cover" %>
            <% else %>
             <%= image_tag 'img/no_image.jpg', class:"rounded-circle",size: "120x120" %><br />
            <% end %>


          <% end %>
          </div>
          <div class="col-sm-9"><%= post.text %></div>
        </div>
        <% if post.user == current_user %>
          <%= link_to "削除",post_path(post),method: :delete %>
        <% end %>

        <%= render "posts/favorite", post: post %>

      </div>
      <% end %>
    </div>
  </div>
</div>
