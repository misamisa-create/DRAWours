<!--フォローボタン-->
<!--renderの際はcurrent_userを抜くように指定すること-->
<% if current_user.following?(@user) %>
  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, remote: true, class: "btn btn-primary mt-3" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, remote: true, class: "btn btn-success mt-3" %>
<% end %>

