<!DOCTYPE html>
<html>
  <head>
    <title>DRAWours</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダー作成中-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-5">
        <a class="navbar-brand" href="/"></a>
        <!--ハンバーガーメニューアイコン-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!--ハンバーガーメニュー中身-->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>

              <li class="nav-item">
                <%= link_to "logOUT",destroy_user_session_path,method: :delete, class: "nav-link" %>
              </li>
              <!--マイページ-->
              <li class="nav-item">
                <%= link_to "ourPOSTS",posts_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "newPOSTS",new_post_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ourPAGE",user_path(current_user), class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "新規登録",new_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン",new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>


          </ul>
          <!--<form class="form-inline my-2 my-lg-0">-->
          <!--  %= form_tag(search_path,:method => 'get') do %>-->
          <!--    %= text_field_tag "search", nil, placeholder: 'Search', class:"form-control mr-sm-2" %>-->
          <!--    %= submit_tag 'Search', :name => nil,class:"btn btn-outline-light my-2 my-sm-0" %>-->
          <!--  % end %>-->
          <!--</form>-->



<%= form_tag(searches_path,method: :get) do %>
  <%= text_field_tag 'content' %>
  <%= select_tag 'model',options_for_select({"User"=>"user","Post"=>"post"})%>
  <%= select_tag 'method',options_for_select({"前方一致"=>"forward_match","後方一致"=>"backward_match","完全一致"=>"perfect","部分一致"=>"partial" })%>
  <%= submit_tag '検索' %>
<% end %>


        </div>
      </nav>

    </header>

    <%= yield %>

    <footer>
      <nav class="navbar navbar-dark bg-dark p-5">
        <span class="navbar-text m-auto">
          ©︎misamisaportfolio
        </span>
      </nav>
    </footer>
  </body>
</html>
