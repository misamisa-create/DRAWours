<!DOCTYPE html>
<html>
  <head>
    <title>DRAWours</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダー作成中-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-5">
        <a class="navbar-brand" href="/"></a>
        <!--ハンバーガーメニューアイコン-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!--ハンバーガーメニュー中身-->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "logOUT",destroy_user_session_path,method: :delete, class: "nav-link" %>
              </li>
              <!--マイページ-->
              <li class="nav-item">
                <%= link_to "ourPOSTS",posts_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "newPOSTS",new_post_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ourPAGE",user_path(current_user), class: "nav-link mr-1" %>
              </li>
              <!--通知アイコン-->
              <li class="nav-item mr-1">
                <%= render 'partial/circle' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "新規登録",new_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン",new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to inquiry_path do %>
                <div class="nav-link mt-1 fa-lg far fa-envelope"></div>
              <% end %>
            </li>
          </ul>
          <!--検索フォーム-->
          <% if user_signed_in? %>
            <button type="button" class="btn btn-secondary mr-2" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
              <i class="fas fa-search" ></i>
            </button>
            <div class="collapse" id="collapseExample">
              <div class="form-inline my-2 my-sm-0">
                <%= form_tag(searches_path,:method => 'get') do %>
                  <%= text_field_tag "content", nil, placeholder: 'Search', class:"form-control" %>
                  <%= select_tag 'model',options_for_select({"制作者"=>"user","タイトル"=>"post"}), class:"form-control"%>
                  <%= select_tag 'method',options_for_select({"前方一致"=>"forward_match","後方一致"=>"backward_match","完全一致"=>"perfect","部分一致"=>"partial" }), class:"form-control"%>
                  <%= submit_tag 'Search', :name => nil,class:"btn btn-outline-light my-2 my-sm-0" %>
                <% end %>
              </div>
            </div>
          <% end %>

        </div>
      </nav>
    </header>
    <%= render partial: 'layouts/flash' %>

    <%= yield %>

    <footer>
      <nav class="navbar navbar-dark bg-dark p-5">
        <span class="navbar-text m-auto">
          ©︎misamisaportfolio
        </span>
      </nav>
    </footer>

  </body>
</html>
